<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-itme nav-link" href="/urls/new">Create New Url</a>
      </div>
    </div>

    <% if (user) { %>
      <form class="form-inline" method="POST" action="/logout">
        <div>
          <label for="user">Logged in as: <%= user.email %>
            <button name="user" type="submit" class="btn btn-primary">Log out</button>
          </label>
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" method="POST" action="/login">
        <div>
          <input class="form-control" type="text" name="login" placeholder="Email" style="margin:1em">
          <button type="submit" class="btn btn-primary">Log In</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>